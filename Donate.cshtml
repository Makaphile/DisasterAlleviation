@model DisasterAlleviationApp.Models.Donation
@{
    ViewData["Title"] = "Make a Donation";
    var disasterIncidents = ViewBag.DisasterIncidents as List<DisasterAlleviationApp.Models.DisasterIncident>;
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h3 class="text-center">Make a Donation</h3>
            </div>
            <div class="card-body">
                <form asp-action="Donate" method="post">
                    <div class="form-group">
                        <label asp-for="DonationType" class="control-label"></label>
                        <select asp-for="DonationType" class="form-control" id="donationType">
                            <option value="">Select Donation Type</option>
                            <option value="Food">Food</option>
                            <option value="Clothing">Clothing</option>
                            <option value="Medical">Medical Supplies</option>
                            <option value="Money">Monetary Donation</option>
                            <option value="Other">Other</option>
                        </select>
                        <span asp-validation-for="DonationType" class="text-danger"></span>
                    </div>
                    
                    <div class="form-group" id="itemDescriptionGroup">
                        <label asp-for="ItemDescription" class="control-label"></label>
                        <input asp-for="ItemDescription" class="form-control" placeholder="Describe what you're donating" />
                        <span asp-validation-for="ItemDescription" class="text-danger"></span>
                    </div>
                    
                    <div class="form-group" id="quantityGroup">
                        <label asp-for="Quantity" class="control-label"></label>
                        <input asp-for="Quantity" class="form-control" placeholder="Enter quantity" />
                        <span asp-validation-for="Quantity" class="text-danger"></span>
                    </div>
                    
                    <div class="form-group" id="monetaryValueGroup" style="display: none;">
                        <label asp-for="MonetaryValue" class="control-label"></label>
                        <input asp-for="MonetaryValue" class="form-control" placeholder="Enter amount in Rands" />
                        <span asp-validation-for="MonetaryValue" class="text-danger"></span>
                    </div>
                    
                    <div class="form-group">
                        <label asp-for="DisasterIncidentId" class="control-label">Select Disaster (Optional)</label>
                        <select asp-for="DisasterIncidentId" class="form-control">
                            <option value="">General Donation (Not specific to any disaster)</option>
                            @foreach (var incident in disasterIncidents)
                            {
                                <option value="@incident.Id">@incident.Title - @incident.Location</option>
                            }
                        </select>
                    </div>
                    
                    <div class="form-group mt-4">
                        <button type="submit" class="btn btn-success btn-lg btn-block">Submit Donation</button>
                        <a href="@Url.Action("Index")" class="btn btn-outline-secondary btn-block">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        document.getElementById('donationType').addEventListener('change', function() {
            var donationType = this.value;
            var itemDescriptionGroup = document.getElementById('itemDescriptionGroup');
            var quantityGroup = document.getElementById('quantityGroup');
            var monetaryValueGroup = document.getElementById('monetaryValueGroup');
            
            if (donationType === 'Money') {
                itemDescriptionGroup.style.display = 'none';
                quantityGroup.style.display = 'none';
                monetaryValueGroup.style.display = 'block';
            } else {
                itemDescriptionGroup.style.display = 'block';
                quantityGroup.style.display = 'block';
                monetaryValueGroup.style.display = 'none';
            }
        });
    </script>
}