@{
    ViewData["Title"] = "About Us";
}

<div class="container">
    <div class="row">
        <div class="col-12">
            <h1 class="text-center mb-5">About Disaster Alleviation Foundation</h1>
            
            <div class="row mb-5">
                <div class="col-md-6">
                    <h3>Our Mission</h3>
                    <p class="lead">
                        To provide immediate relief and support to communities affected by natural disasters 
                        and emergencies through coordinated response efforts, resource distribution, and 
                        volunteer mobilization.
                    </p>
                </div>
                <div class="col-md-6">
                    <h3>Our Vision</h3>
                    <p class="lead">
                        A world where no community suffers alone during disasters, and where help arrives 
                        quickly and efficiently through technology-enabled coordination and compassionate service.
                    </p>
                </div>
            </div>

            <div class="row mb-5">
                <div class="col-12">
                    <h3 class="text-center mb-4">What We Do</h3>
                    <div class="row">
                        <div class="col-md-4 text-center mb-4">
                            <i class="fas fa-bullhorn fa-2x text-primary mb-3"></i>
                            <h5>Incident Reporting</h5>
                            <p>Quick and efficient reporting of disaster incidents to enable rapid response.</p>
                        </div>
                        <div class="col-md-4 text-center mb-4">
                            <i class="fas fa-box-open fa-2x text-success mb-3"></i>
                            <h5>Resource Management</h5>
                            <p>Coordination of donations and distribution of essential resources to affected areas.</p>
                        </div>
                        <div class="col-md-4 text-center mb-4">
                            <i class="fas fa-users fa-2x text-info mb-3"></i>
                            <h5>Volunteer Coordination</h5>
                            <p>Mobilizing and managing volunteers for effective disaster response efforts.</p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-8 offset-md-2">
                    <div class="card bg-light">
                        <div class="card-body text-center">
                            <h4>Join Our Cause</h4>
                            <p>Together, we can make a difference in the lives of those affected by disasters.</p>
                            <div class="mt-3">
                                <a href="@Url.Action("Register", "Account")" class="btn btn-primary mx-2">Create Account</a>
                                <a href="@Url.Action("Register", "Volunteer")" class="btn btn-success mx-2">Become a Volunteer</a>
                                <a href="@Url.Action("Donate", "Donation")" class="btn btn-info mx-2">Make a Donation</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>