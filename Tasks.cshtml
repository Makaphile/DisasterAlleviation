@model List<DisasterAlleviationApp.Models.VolunteerTask>

@{
    ViewData["Title"] = "Available Volunteer Tasks";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Available Volunteer Tasks</h2>
    <a href="@Url.Action("MyAssignments")" class="btn btn-outline-primary">My Assignments</a>
</div>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

<div class="row">
    @foreach (var task in Model)
    {
        <div class="col-md-6 mb-4">
            <div class="card h-100">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">@task.Title</h5>
                    <span class="badge @GetStatusBadgeClass(task.Status)">@task.Status</span>
                </div>
                <div class="card-body">
                    <p class="card-text">@task.Description</p>
                    <ul class="list-unstyled">
                        <li><strong>Location:</strong> @task.Location</li>
                        <li><strong>Date:</strong> @task.StartDate.ToString("MMM dd, yyyy") - @task.EndDate.ToString("MMM dd, yyyy")</li>
                        <li><strong>Required Skills:</strong> @task.RequiredSkills</li>
                        <li><strong>Volunteers Needed:</strong> @task.CurrentVolunteers / @task.MaxVolunteers</li>
                        @if (task.DisasterIncident != null)
                        {
                            <li><strong>Disaster:</strong> @task.DisasterIncident.Title</li>
                        }
                    </ul>
                </div>
                <div class="card-footer">
                    @if (task.CurrentVolunteers < task.MaxVolunteers && task.Status == "Open")
                    {
                        <form asp-action="AssignToTask" method="post" class="d-inline">
                            <input type="hidden" name="taskId" value="@task.Id" />
                            <button type="submit" class="btn btn-success btn-sm">Volunteer for this Task</button>
                        </form>
                    }
                    else
                    {
                        <button class="btn btn-secondary btn-sm" disabled>Task Full</button>
                    }
                    <a href="@Url.Action("TaskDetails", new { id = task.Id })" class="btn btn-outline-primary btn-sm">View Details</a>
                </div>
            </div>
        </div>
    }
</div>

@if (!Model.Any())
{
    <div class="alert alert-info text-center">
        <h4>No volunteer tasks available at the moment.</h4>
        <p>Check back later for new opportunities to help.</p>
    </div>
}

@functions {
    public string GetStatusBadgeClass(string status)
    {
        return status.ToLower() switch
        {
            "open" => "bg-success",
            "in progress" => "bg-warning",
            "completed" => "bg-info",
            "cancelled" => "bg-danger",
            _ => "bg-secondary"
        };
    }
}